<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="group" type="com.sonos.abaker.android_sample.discover.Group"/>
        <variable name="handler" type="com.sonos.abaker.android_sample.GroupsActivityHandler" />
    </data>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/group_refresh_button"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="Refresh"
            android:onClick="@{handler::onClickRefresh}"
            android:layout_marginBottom="0dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/group_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_above="@id/group_refresh_button"
            android:paddingBottom="100dp"
            android:scrollbars="vertical" />

    </RelativeLayout>

</layout>
