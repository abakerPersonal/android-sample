<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="group" type="com.sonos.abaker.android_sample.model.Group"/>
        <variable name="pageModel" type="com.sonos.abaker.android_sample.model.ControlActivityPageModel"/>
        <variable name="handler" type="com.sonos.abaker.android_sample.handlers.ControlActivityHelper" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/group_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@{group.name}"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_dark"
            />

        <TextView
            android:id="@+id/control_track_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="@{pageModel.trackName}"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            />

        <SeekBar
            android:id="@+id/group_seek_bar"
            style="@style/Widget.AppCompat.SeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/control_track_name"
            android:max="100"
            android:progress="@{pageModel.volume}"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/group_refresh_button"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/group_seek_bar"
            android:text="Pause"
            android:onClick="@{handler::onClickSetVolumeToZero}"
            android:layout_marginBottom="0dp" />

    </RelativeLayout>

</layout>
